<% if @users_unroled.empty? %>
  <div class="alert alert-warning">
    <%= t(".none_user") %>
  </div>
<% else %>
  <%= form_tag change_admin_role_site_admin_users_path,
    method: "post",
    id: "subscribe_users",
    remote: 'true',
    update: 'enrole_adms' %>

  <table class="table">
    <thead>
      <tr>
        <th><%= t(".enrole_user") %></th>
	<th style="width: 40%"><%= t(".enroled_user") %></th>
	<th style="width: 15%"></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td style="height: 300px; overflow: auto">
          <div>
            <%= text_field_tag :users_unroled, params[:users_unroled], placeholder: t("search"),
              data: {fullname: (@user and @users_unroled.include?(@user)) ? @user.fullname : ''}, class: 'form-control' %>
          </div>
          <div style="height: 300px; overflow: auto">
            <ul id="users_list_roles" class="nav">
              <% @users_unroled.each do |user| %>
                <li>
                  <div class="checkbox">
                    <label>
                      <%= check_box_tag 'user[id][]', user.id, user.id == params[:user_id].to_i %>
                      <%= user %> <%= "(#{user.login})" if current_user.is_admin? %>
                    </label>
                  </div>
                </li>
              <% end %>
            </ul>
          </div>
	</td>
	<ul class="nav">
	  <% @site_admins.each do |user| %>
	    <li>
	    <% #Verificar cÃ³digo para carregar role = "Admin" do site... No meu exemplo o role "admin" do site 2 tinha o id = 11 %>
	    <% role = '11' %>
	    <td><%= link_to user, profile_url(user.login, subdomain: current_site) %> <%= link_to "(#{user.login}) #{icon('user')}".html_safe, admin_user_url(user, subdomain: nil), target: '_blank' if current_user.is_admin? %></td>
            <td class="text-right">
	      <%= link_to icon('trash', text: t("destroy")),site_admin_role_path(role), :data => {:confirm => t("are_you_sure")}, :method => :delete %>
	    </td>
	    </li>
          <% end %>
        </ul>
      </tr>
    </tbody>
    <tfoot>
      <th>
	<div class="form-actions">
	  <%= button_tag t("save"), class: 'btn btn-primary', disable_with: t("please_wait") %>
	  <%= link_to t("back"), :back, class: "btn btn-default" %>
	</div>
      </th>
    </tfoot>
 </table>

</form>
<% content_for :javascripts, javascript_include_tag('users.enrole') %>
<% end %>
