<% unless styles.blank? %>
  <h4><%= t(".#{type}_styles") %></h4>
  <table class='table table-striped'>
    <thead>
      <th> <%= t('.name') %> </th>
      <th> <%= t('.owner') %> </th>
      <% if type.to_s == 'follow' %>
        <th> <%= sortable 'styles.updated_at', t(".last_update") %> </th>
        <th style="text-align: center;"><%= t(".publish") %></th>
      <% end %>
      <th> <%= t('.actions') %> </th>
    </thead>
    <tbody>
      <% styles.each do |style| %>
        <tr>
          <td><%= link_to(style.name, site_admin_style_path(style)) %></td>
          <td>
            <%= link_to style.owner.name, site_url(subdomain: style.owner) %>
          </td>
          <% if type.to_s == 'follow' %>
            <td><%= l(style.updated_at, :format => :short) %></td>
            <td style="text-align: center;">
              <%= raw toggle_field(style.mine(current_site.id), 'publish', 'toggle', {id: style.id}) %>
            </td>
          <% end %>
          <td class="style-action">
            <%= raw style_actions style, { others: true, type.to_sym => true } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate styles, param_name: "page_#{type}_styles", remote: true, params: { style_type: type.to_s } %>
<% else %>
  <h4><%= t(".#{type}_styles") %></h4>
  <div class="alert">
    <%= t(".no_#{type}_styles") %>
  </div>
<% end %>
